<%= form_for @retro, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :team_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :team_id, Team.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sprint, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sprint, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                retros_path, :class => 'btn' %>
  </div>
<% end %>